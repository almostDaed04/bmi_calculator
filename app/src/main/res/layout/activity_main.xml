<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="#5E7278"
        app:subtitle="Check Your BMI"
        app:title="BMI Calculator"
        app:navigationIcon="@drawable/toolbar_menu"
        app:navigationIconTint="#fff"
        app:navigationContentDescription="toolbar"
        app:menu="@menu/toolbar_menu"

        >
    </com.google.android.material.appbar.MaterialToolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Calculate BMI of"
            android:textSize="18sp"
            android:layout_marginRight="6dp"
            android:textStyle="bold">

        </TextView>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:entries="@array/age_array"
            android:background="#F2ABABAB"
            >

        </Spinner>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Weight"
        android:textSize="18sp"

        >

    </TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edtWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5E7278"
            android:ems="9"
            android:hint="@string/edtWeight"
            android:layout_marginRight="6dp"
            android:inputType="number"
            android:padding="4dp">

        </EditText>

        <Spinner
            android:id="@+id/spWeight"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="#F2ABABAB"
            android:entries="@array/weight_array">

        </Spinner>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Height"
        android:textSize="18sp"

        >

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        >


        <EditText
            android:id="@+id/edtFeet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="#5E7278"
            android:ems="4"
            android:hint="Fts"
            android:inputType="number"
            android:padding="4dp">

        </EditText>

        <EditText
            android:id="@+id/edtInch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5E7278"
            android:ems="4"
            android:hint="Inch"
            android:layout_marginRight="6dp"
            android:inputType="number"
            android:padding="4dp">

        </EditText>

        <EditText
            android:id="@+id/edtHeight"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="#5E7278"
            android:ems="5"
            android:hint="@string/edtCms"
            android:layout_marginRight="6dp"
            android:inputType="number"
            android:padding="4dp">

        </EditText>

        <Spinner
            android:id="@+id/spHeight"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="#F2ABABAB"
            android:entries="@array/height_array">

        </Spinner>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/btnCalculate">

    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/bmiResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Result"
        android:textSize="18sp">

    </TextView>

</LinearLayout>